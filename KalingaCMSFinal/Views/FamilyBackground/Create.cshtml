@model Tuple<KalingaCMSFinal.Models.EmpFamilyBackGround, IEnumerable<KalingaCMSFinal.Models.vw_FamilyBackground>>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Family Background</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-md-12" style="width:300px;">
                <label for="txtSearch" class="control-label">Search Employee</label>
                <div class="input-group">
                    <input type="text" name="txtSearch" id="txtSearch" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group col-md-6">
                <label for="txtAgencyEmployeeNumber" class="control-label">Agency Employee Number</label>
                <div>
                    <input type="text" name="txtAgencyEmployeeNumber" id="txtAgencyEmployeeNumber" class="form-control">
                </div>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Item1.empID, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.empID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.empID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.RelationshipID, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DropDownListFor(model => model.Item1.RelationshipID, ViewBag.Relationships as SelectList, "--Select Relationship--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item1.RelationshipID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Item1.LastName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Item1.FirstName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Item1.MiddleName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.MiddleName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.BirthDate, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Item1.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item1.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Item1.Occupation, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.Occupation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.Occupation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8 col-md-offset-1">
                @Html.LabelFor(model => model.Item1.CompanyName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Item1.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.CompanyAddress, htmlAttributes: new { @class = "control-labe" })
            <div>
                @Html.EditorFor(model => model.Item1.CompanyAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item1.CompanyAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item1.CompanyPhone, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Item1.CompanyPhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item1.CompanyPhone, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr />
<table class="table table-striped table-bordered" id="FamilyBackgroundTable">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Relationship
            </th>
            <th>
                Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Occupation
            </th>
            <th>
                Employer Name
            </th>
            <th>
                Employer Address
            </th>
            <th>
                Telephone
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.empID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.relationshipDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyPhone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.empFamBGID }, new { @class = "modalOpener editModal btn btn-info btn-sm glyphicon glyphicon-edit", @data_target = "editModal" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.empFamBGID }, new { @class = "modalOpener deleteModal btn btn-danger btn-sm glyphicon glyphicon-trash", @data_target = "deleteModal" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div id="mainContent" class="modal-content col-sm-12">
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#FamilyBackgroundTable').DataTable({
                scrollX: false
            });
            $('#FamilyBackgroundTable').on("click", ".modalOpener", function (e) {
                e.preventDefault();
                //replace the get with this.href to load the edit page
                $.get(this.href, function (data) {
                    //replace the content returned
                    $("#mainContent").html(data);
                });
                //show the modal
                $('#myModal').modal({
                    keyboard: true,
                }, 'show');
                return false;
            });
            $('#myModal').on('shown.bs.modal', function (e) {
                var form = $("#editForm")
                    .removeData("validator") /* added by the raw jquery.validate plugin */
                    .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/
                $.validator.unobtrusive.parse(form);
            })
        });
    </script>
}
